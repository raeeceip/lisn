---
import Icon from "./Icon.astro";
---

<div class="voice-recorder flex flex-col items-center p-8">
	<button
		id="recordButton"
		class="flex items-center gap-2 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2 rounded-md"
	>
		<Icon name="microphone" class="h-5 w-5" />
		Start Recording
	</button>
	<p id="status" class="mt-4 text-foreground">Click to start recording</p>
</div>

<script>
	import "../scripts/audio-recorder.js";
</script>
